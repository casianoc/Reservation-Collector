<h1>View Restaurant's<%= pluralize(@reservation.count, "Reservation")%></h1>
<table>
	<thead>
		<tr>
			<th>Date</th>
			<th>Time</th>
			<th>Name</th>
			<th>Number</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @reservations.each do |reservation| %>
		<tr>
			<td><%= reservation.date.strftime("%Y-%m-%d") %></td>
			<td><%= reservation.time %></td>
			<td><%= reservation.name %></td>
			<td><%= reservation.number %></td>
		</tr>
		<% end %>
		</tbody>
</table>
<a href="/reservations/new">View Reservations</a>