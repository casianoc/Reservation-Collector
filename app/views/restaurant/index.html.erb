<h1>View <%= pluralize(@restaurants.count, "Restaurant")%></h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th scope="col">Name</th>
			<th scope="col">City</th>
			<th scope="col">Cuisine</th>
			<th scope="col">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @restaurants.each do |restaurant| %>
		<tr>
			<td><%= restaurant.name %></td>
			<td><%= restaurant.city %></td>
			<td><%= restaurant.cuisine %></td>
			<td><a href="/restaurants/<%= restaurant.id %>">Show</a> |
			<td><a href="/restaurants/<%= restaurant.id %>/edit">Edit</a> |
			<td><a href="/restaurants/<%= restaurant.id %>" data-method="delete"
				data-confirm="Are you sure?">Delete</a>

			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<a href="/restaurants/new">Create Restaurants</a>